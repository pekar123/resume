{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main class='p-5'>
  {{#with main}}
      <div>
        {{> title data='Work history' big=true}}
      </div>
        <div>
          <ul>
            {{#each works}}
              <li>
                <div class="p-3"> {{position}} </div>
                
                 <div class="p-3">{{duration.from}}
                   -{{#if duration.to}}
                     {{duration.to}} 
                   {{else}}
                     (Досі тут парцюю)
                   {{/if}}
                  </div>
                  
                  <div>
                   <b>{{> linke text=company.name href=company.name blanck=true noLine=true}}</b>
                  </div>
                  
                  <br/>

                  <div>
                   <strong>Project({{projectAmount}})</strong> 
                  </div>

                  
                  
                  <ul>

                      {{#each projects}}
                      <li>
                        <div> {{>linke text=name href=url blanck=true noLine=true}} </div>
                        <br/>
                        <div>{{about}}</div>
                        <br/>
                        <em>Project stacks ({{stackAmount}})</em>
                        <div>
                          {{#each stack}}
                          <li>
                            {{name}}
                          </li>
                          {{/each}}
                        </div>
                        <br>
                        <em>“Project awards”</em>
                        <br>
                        <div>
                        {{#each awards}}
                           <li>
                            {{name}}
                           </li>

                        {{/each}}
                        </div>
                        <br>
                      </li>
                      {{/each}}  

                  </ul>
              </li>
            {{/each}}
          </ul>
        </div>
      
    
  {{/with}}
  </main>


