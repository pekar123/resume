<main class='m-5'>
  <div>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
  </div>
  <hr />

  <div class='card'>
    <div class='my-2 m-3'>

      {{#each buttons}}

        <div class='mt-2'>
          <a
            href='{{link}}'
            class='btn btn-primary'
          >{{text}}</a>
        </div>

      {{/each}}

    </div>
  </div>

</main>