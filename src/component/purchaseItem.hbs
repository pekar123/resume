<div class='row mb-3'>

  <div class='card'>
    <div class='row g-0'>

      <div class='col-3'>
        <div class='card-body'>
          <p class='card-title'>{{number}}</p>
          <h5 class='card-text'>{{status}}</h5>
        </div>
      </div>

      <div class='col-2'>
        <div class='card-body'>
          {{#with amount}}
            <p class='card-title'>{{title}}</p>
            <h5 class='card-text'>{{value}}</h5>
          {{/with}}

        </div>
      </div>
      <div class='col-5'>
        <div class='card-body'>
          {{#each images}}
            <img src='{{this}}' alt='' />
          {{/each}}
        </div>
      </div>
      <div class='col-2 my-4'>
        <div class='card-body'>
          {{#with button}}
            {{#if isPrimary}}
              <a
                href='{{link}}'
                class='btn btn-primary'
              >{{text}}</a>
            {{/if}}
          {{/with}}

        </div>
      </div>
    </div>
  </div>

</div>